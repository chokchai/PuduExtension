{
    "manifest_version": 2,

    "name": "Pudu Extension",
    "description": "Pudu Extension is extension that will make your site look clean and clear!",
    "version": "1.0.5.2",

    "permissions": [
        "http://*.lolthai.com/"
    ],

    "content_scripts": [
        {
            "matches": ["http://*.lolthai.com/*"],
            "css": [
                "libs/jquery.ui.totop.css",
                "libs/font-awesome.min.css",
                "pudu.css"
            ],
            "js": [
                "libs/jquery-2.0.3.min.js",
                "libs/jquery.ui.totop.min.js",
                "utils.js",
                "pudu.js"
            ]
        }
    ],

    "icons" : {
        "16": "imgs/pudu-icon-16.png",
        "48": "imgs/pudu-icon-48.png",
        "128": "imgs/pudu-icon-128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "imgs/pudu-icon-19.png",
            "38": "imgs/pudu-icon-38.png"
        },
        "default_title": "Pudu Extension",
        "default_popup": "popup.html"
    },

    "web_accessible_resources" : [
        "libs/jquery-2.0.3.min.map",
        "pudu.map",
        "pudu.coffee",
        "utils.map",
        "utils.coffee",
        "popup.map",
        "popup.coffee",
        "popup.js",
        "imgs/emo.png",
        "imgs/jquery.ui.totop.png",
        "font/FontAwesome.otf",
        "font/fontawesome-webfont.eot",
        "font/fontawesome-webfont.svg",
        "font/fontawesome-webfont.ttf",
        "font/fontawesome-webfont.woff"
    ]
}